<script>
  {%- set js -%}
  (function () {
    const mediaQuery = window.matchMedia("(prefers-reduced-motion: reduce)");

    if (mediaQuery.matches) {
      const el = document.getElementById("morph-blobs");
      el.pauseAnimations();
    }

    const handleMedia = (e) => {
      const el = document.getElementById("morph-blobs");
      if (e.matches) {
        el.pauseAnimations();
      } else {
        el.unpauseAnimations();
      }
    };
    mediaQuery.addEventListener("change", handleMedia);
  })();
  {%- endset -%}
  {{ js | jsmin | safe }}
</script>
