.skip-link {
  border: 0;
  clip: rect(0 0 0 0);
  height: 1px;
  width: 1px;
  margin: -1px;
  padding: 0;
  overflow: hidden;
  position: absolute;

  &:focus {
    padding: 1rem;
    position: fixed;
    top: 0.625rem;
    left: 0.625rem;
    color: var(--background-1);
    background: var(--text-1);
    z-index: 1;
    width: auto;
    height: auto;
    clip: auto;
  }
}

.pagination {
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
  list-style: none;
  padding: 0;

  & > * + * {
    padding-left: 1.25rem;
  }
}

.page-author {
  display: grid;
  grid-template-columns: 100px 1fr;
  grid-gap: 1.5em;
  justify-content: space-between;
  align-items: center;
  padding: var(--base-padding);
  background: var(--background-2);
  border: 1px solid var(--background-3);
  border-radius: 0.5rem;
  margin-bottom: 1rem;
  box-shadow: var(--shadow);

  & img.profile {
    border-radius: 0.5rem;
    width: 100%;
    box-shadow: var(--shadow);
    aspect-ratio: 1/1;
  }

  & *:last-child {
    margin-bottom: 0;
  }
}

@media (max-width: 32rem) {
  .page-author {
    grid-template-columns: 1fr;

    & > div:nth-child(1) {
      grid-row: 2;
    }
    & > div:nth-child(2) {
      grid-row: 1;
    }
  }
}

.article-meta > * + *::before {
  content: 'â€¢';
  font-size: var(--font-size-base);
  padding-inline-start: 0.25rem;
  padding-inline-end: 0.25rem;
}
.article-teaser {
  text-align: center;

  & img {
    max-height: 400px;
    border-radius: 0.5rem;
  }
}

nav.breadcrumb {
  & ol {
    margin: 0;
    padding-left: 0;
    list-style: none;
  }

  & li {
    display: inline;

    & + li::before {
      display: inline-block;
      margin: 0 0.25rem;
      transform: rotate(15deg);
      border-right: 0.1em solid currentColor;
      height: 0.8rem;
      content: '';
    }
  }

  & [aria-current='page'] {
    color: var(--text-1);
    font-weight: 700;
    text-decoration: none;
  }
}

a.tag {
  display: inline-block;
  background-color: var(--tag-background);
  color: var(--tag-text);
  font-size: 0.875em;
  border-radius: 0.25em;
  padding: 0.25em 0.75em;
  text-decoration: none;
  transition: background-color var(--base-transition-duration) ease-in;

  &:hover {
    background-color: var(--tag-background-hover);
    color: var(--tag-text);
  }
}

ol.tags-list,
ul.tags-list {
  display: inline-flex;
  align-items: center;
  padding-inline-start: 0.25em;
  flex-wrap: wrap;
  gap: 0.25rem;
  list-style: none;
  padding: 0;

  & li {
    margin: 0;
  }
}

.enhance {
  background: var(--enhance-text);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  font-weight: bold;

  &::selection {
    -webkit-background-clip: initial;
    -webkit-text-fill-color: initial;
  }
}

.octicon {
  display: inline-block;
  vertical-align: middle;
  fill: currentColor;
}

img.emoji {
  margin-bottom: 0;
  vertical-align: baseline;
  text-decoration: none;
}

.heading-link {
  text-decoration: none;
  color: inherit;
  line-height: inherit;

  &:focus,
  &:hover,
  &:active {
    &::after {
      content: '#';
      display: inline-flex;
      font-size: 0.75em;
      padding-inline-start: 0.25em;
      text-decoration: none;
      opacity: 0.5;
    }

    text-decoration: underline;
    color: inherit;
  }
}

/* for non-blue links, like in the header/footer */
.solid-link {
  & a {
    color: var(--text-2);
    text-decoration: none;
    &:hover {
      text-decoration: none;
    }
  }

  & a:hover {
    color: var(--text-1);
  }
}

.blog-subheader {
  display: flex;
  flex-flow: row wrap;
  column-gap: 1rem;
  row-gap: 0.5rem;
  justify-content: center;
  align-items: center;

  & p {
    flex: 1 1 auto;
    max-width: 30rem;
  }

  & .subscribe-links {
    display: flex;
    flex-flow: row wrap;
    gap: 0.25rem;
  }

  & a {
    background-color: var(--background-color);
    padding: 0.5rem;
    border-radius: 0.25rem;
    transition:
      border-radius var(--base-transition-duration) ease-in,
      background-color var(--base-transition-duration) ease-in;
    color: #18181b;
    font-size: var(--font-size-sm);
    text-decoration: none;

    &:hover {
      text-decoration: underline;
    }
  }
}
