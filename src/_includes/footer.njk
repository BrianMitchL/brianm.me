{% set sorted = findMe.feature | sort(false, true, 'icon') %}
{% set footerLinks = sorted.concat([{
  title: "RSS Feed",
  url: "/feed.xml",
  icon: "rss"
}, {
  title: "JSON Feed",
  url: "/feed.json",
  icon: "jsonfeed"
}]) %}
<footer class="text-center solid-link">
  <ul class="list-none list-glass text-150" aria-label="Links">
    {%- for feature in footerLinks -%}
    <li>
      <a href="{{ feature.url | url }}">
        {%- icon feature.icon -%}<span class="sr-only">{{ feature.title }}</span>
      </a>
    </li>
    {%- endfor -%}
  </ul>
  <p>
    &copy; 2014&ndash;{{ site.date.getFullYear() }} Brian Mitchell
  </p>
</footer>
